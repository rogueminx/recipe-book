<h1><%= @category.category_name %> category</h1>

<hr>
<% if @recipes.any?() %>
  <h3>Here are all the recipes in this category:</h3>
  <% @recipes.each do |recipe| %>
    <h4><a href="/recipes/<%= recipe.id()%>"><%= recipe.recipe_name %></a></h4>
  <% end %>
  </table>
<% end %>
<form action="/categories/<%= @category.id() %>" method="post" id="delete">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="btn btn-danger">Delete this Category</button>
</form>
